{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./typings/"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
